    <ul class="list-group">
      <% for (var i = 0; i < posts.length; i++) { %>
      <li class="list-group-item">
        <p>게시글번호 : <%= posts[i]._id %></p>
        <h4>할일 : <%= posts[i].TITLE %> <h4>
        <P>일시 : <%= posts[i].DATE %></P>
        <button class="btn btn-outline-danger delete" type="button" data-id="<%= posts[i]._id %>">삭제</button><!-- 삭제버튼에 데이터아이디 숨겨넣기 -->
      </li>
      <% } %>
    </ul>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

    <script>

      $('.delete').click(function(e){
        const postNumber = e.target.dataset.id;
        const clicked = $(this);
        $.ajax({
        method : 'DELETE',
        url : '/delete',
        data : {_id : postNumber}
        }).done((result)=>{
          // 삭제버튼을 누른 요소를 지움
          console.log('DELETE SUCCESS')
          clicked.parent('li').fadeOut();
          
        }).fail(function(xhr, textStatus, errorThrown){
          console.log(xhr, textStatus, errorThrown);
        });
      });
    </script>
        



